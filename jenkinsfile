pipeline {
  agent none

  stages { 
    stage('Unit Testing') {
      agent {
         label 'masternode'
      }
      steps {
        sh 'ant -f test.xml -v'
        junit 'reports/result.xml'
      }
    }
    stage('build') {
      agent {
         label 'masternode'
      }

      steps {		
        sh 'ant -f Build.xml -v'
      }
    }
    stage('Deploy') {
      agent {
         label 'masternode'
      }

      steps {
         sh "cp dist/rectangle_${env.BUILD_NUMBER}.jar /var/www/html/rectangles/all/"
      }
    }
    stage("Running on Centos") {
      agent {
         label 'Centos'
      }
      steps {
         sh "wget http://sumitsalunke4.mylabserver.com/rectangles/all/rectangle_${env.BUILD_NUMBER}.jar"
         sh "java -jar rectangle_${env.BUILD_NUMBER}.jar 3 4" 
      }
    }
  }
  
  post {
    always {
      archiveArtifacts artifacts: 'dist/*.jar', fingerprint: true 	
    }
  }
}
