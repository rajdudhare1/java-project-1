pipeline {
  agent any

  stages {
    stage('Unit Testing') {
      agent {
         label 'masternode'
      }
      steps {
        sh 'ant -f test.xml -v'
        junit 'reports/result.xml'
      }
    }
    stage('build') {
      steps {		
        sh 'ant -f Build.xml -v'
      }
    }
  }
  
  post {
    always {
      archiveArtifacts artifacts: 'dist/*.jar', fingerprint: true 	
    }
  }
}
